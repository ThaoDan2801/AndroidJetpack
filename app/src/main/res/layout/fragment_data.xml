<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <!--        dữ liệu cần thiết để thiện thị -->
        <variable
            name="vm"
            type="com.glucozo.android_jetpack.viewmodel.DataViewModel" />


    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@{String.valueOf(vm.number)}" />
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edit_text"
            android:layout_marginTop="20dp"
            android:layout_below="@id/tv_value"
            android:text="@{String.valueOf(vm.number)}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edit_text1"
            android:layout_marginTop="20dp"
            android:layout_below="@id/edit_text"
            android:text="@={vm.message}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@id/edit_text1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@color/teal_700"
            android:onClick="@{() -> vm.updateNumber()}" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_toast_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn"
            android:layout_centerHorizontal="true"
            android:text="show Toast" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/start_activty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_toast_show"
            android:layout_centerHorizontal="true"
            android:text="start activity" />

    </RelativeLayout>
</layout>